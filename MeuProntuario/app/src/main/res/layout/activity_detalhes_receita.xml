<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="br.com.meuprontuario.meuprontuario.PacoteReceita.DetalhesReceita">

        <TextView
            android:id="@+id/textView_data"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView_descricao"
            android:layout_below="@+id/textView_descricao"
            android:layout_marginTop="21dp"
            android:text="Data:" />

        <TextView
            android:id="@+id/textView_doenca"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="21dp"
            android:text="Doença: "
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView_descricao"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_height="300dp"
            android:text="Descrição:"
            android:layout_below="@+id/textView_doenca"
            android:layout_alignStart="@+id/textView_doenca" />

    <TextView
        android:id="@+id/textView_validade"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Validade:"
        android:layout_below="@+id/textView_data"
        android:layout_alignStart="@+id/textView_data" />

</RelativeLayout>
</ScrollView>
