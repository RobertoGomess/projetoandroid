<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtSenha"
        android:shadowColor="@color/colorAccent"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/ic_account_grey600_36dp"
        android:drawablePadding="10dp"
        android:ems="14"
        android:hint="Email ou UsuÃ¡rio"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/txtSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewEsqueceuSenha"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp"
        android:drawableLeft="@drawable/ic_key_grey600_36dp"
        android:drawablePadding="10dp"
        android:ems="14"
        android:hint="Senha"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textViewEsqueceuSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:padding="5dp"
        android:text="Esqueceu sua senha?"
        android:textStyle="italic"
        android:layout_above="@+id/btn_Entrar"
        android:layout_alignEnd="@+id/btn_Entrar" />

    <Button
        android:id="@+id/btn_Entrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="51dp"
        android:text="Entrar"
        android:background="@color/colorPrimaryDark"
        android:textColor="#fff"
        android:layout_marginEnd="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Switch
        android:id="@+id/switchLembraSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewEsqueceuSenha"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:text="Lembre-me"
        android:textColor="@color/colorHint" />

</RelativeLayout>